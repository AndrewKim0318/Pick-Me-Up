<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Login</title>

  <link rel="stylesheet" href="/styles/login.css">
  <link rel="stylesheet" href="/styles/nav_bar.css">
  <link rel="stylesheet" href="/styles/layout.css">
  <link rel="stylesheet" href="/styles/footer.css">
</head>
<body>

  <% include partials/_navbar.ejs %>

  <div class="log-in-container">
    <form action="/login" method="POST" class="log-in-form">
      <h3 class="log-in-title"> Login </h3>
      <% if (error === "user") { %>
        <table>
            <div class="login-username-container error-message">User does not exist!</div>
            <div class="log-in-name-container">
                <label for="username" class="log-in-label">Username</label>
                <input type="text" class="log-in-input" name="username"></input>
            </div>
            <div class="log-in-password-container">
                <label for="password" class="log-in-label">Password</label>
                <input type="text" class="log-in-input" name="password"></input>
              </div>
        </table>
      <% } else if(error === "password") { %>
        <table>
            <div class="log-in-name-container">
                <label for="username" class="log-in-label">Username</label>
                <input type="text" class="log-in-input" name="username"></input>
            </div>
            <div class="login-username-container error-message"> Incorrect Password!</div>
            <div class="log-in-password-container">
                <label for="password" class="log-in-label">Password</label>
                <input type="text" class="log-in-input" name="password"></input>
              </div>
        </table>
      <% } else { %>
        <table>
            <div class="log-in-name-container">
                <label for="username" class="log-in-label">Username</label>
                <input type="text" class="log-in-input" name="username"></input>
            </div>
            <div class="log-in-password-container">
                <label for="password" class="log-in-label">Password</label>
                <input type="text" class="log-in-input" name="password"></input>
              </div>
        </table>
      <% } %>

      <button type="submit" class="log-in-submit-button">Login</button>
    </form>
  </div>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script type="text/javascript" src="/scripts/error.js"></script>
</body>
</html>
