<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Main Page</title>
  <link rel="stylesheet" href=https://use.fontawesome.com/releases/v5.10.1/css/all.css> <link rel="stylesheet"
    href="/styles/main_page.css">
  <link rel="stylesheet" href="/styles/nav_bar.css">
  <link href="https://fonts.googleapis.com/css?family=Raleway:300i,400,500,600i,700&display=swap" rel="stylesheet">
</head>

<body>
  <% include partials/_navbar.ejs %>
  <header class="header-wrapper">
    <img  class="header-image" src="/docs/cake.jpg">
    <h1>Pick Me Up</h1>
    <!-- <video class="video" _ngcontent-coverr-redesign-c19 playsinline autoplay muted loop class="header-video"
      src="https://storage.googleapis.com/coverr-main/mp4%2FHanging%20There.mp4?X-Goog-Algorithm=GOOG4-RSA-SHA256&X-Goog-Credential=coverr-183014%40appspot.gserviceaccount.com%2F20190824%2Fauto%2Fstorage%2Fgoog4_request&X-Goog-Date=20190824T105648Z&X-Goog-Expires=90001&X-Goog-SignedHeaders=host&X-Goog-"></video> -->
  </header>
  <div class="content-wrapper">
    <nav class="scroll-menu-nav">
      <div class="search-toggle">
        <button class="search-icon"><i id="change-icon" class="fas fa-search"></i></button>
        <div class="search-container">
          <form action="/search" method="POST" style="margin-bottom: 0px;">
            <input class="search-input" type="text" placeholder="Search items.." />
            <button type="submit" name="submit" class="search-icon"><i class="fas fa-search"></i></button>
          </form>
        </div>
      </div>
      <a id="pastries" class="menu-item-btn" href="#menu">Pastries</a>
      <a id="cookies" class="menu-item-btn" href="#menu">Cookies</a>
      <a id="cakes" class="menu-item-btn" href="#menu">Cakes</a>
      <a id="pies" class="menu-item-btn" href="#menu">Pies</a>
      <a id="macarons" class="menu-item-btn" href="#menu">Macarons</a>
    </nav>

    <section class="menu-container">
      <div class="menu-item">

        <% for(let element of data) { %>
          <div class = "<%= element['category']%> inside-menu">
            <h3><%= element["item_name"] %></h3>
            <p><%= element["item_description"] %></p>
            <span class="item-price"><%= element["cost"] %></span>
            <div class="counter">
              <span class="minus"><i class="far fa-minus-square"></i></span>
              <input class="menu-item-counter" type="text" value="0" readonly>
              <span class="plus"><i class="far fa-plus-square"></i></span>
            </div>
          </div>
        <%}%>
      </div>
      <section class="checkout-container">
        <div class="chk-out-total">Total:</div>
        <div class="checkout-btn">CHECKOUT</div>
      </section>
    </section>
  </div>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</body>
</html>
